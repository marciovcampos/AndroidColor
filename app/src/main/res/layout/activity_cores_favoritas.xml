<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:parentActivityName="br.com.marcio.androidcolor.MainActivity"
    tools:context=".CoresFavoritasActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tituloCoresFavoritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CORES FAVORITAS"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@mipmap/ic_star"
        />

    <TextView
        android:id="@+id/linhaCoresFavoritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloCoresFavoritas"
        android:background="@drawable/line"
        />

    <TextView
        android:id="@+id/txtCoresFavoritas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars = "vertical"
        android:textAlignment="center"
        android:layout_below="@+id/linhaCoresFavoritas"/>

</RelativeLayout>